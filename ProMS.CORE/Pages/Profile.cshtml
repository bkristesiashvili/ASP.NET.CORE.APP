@page
@model ProMS.CORE.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";

var enabled= true;
}
@if(User.IsInRole("Admin"))
{
    enabled =false;
}
<div class="container bootstrap snippet">
    <br />
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->
            <div class="text-center">
                <img src="~/imgs/uImage.png" class="avatar img-circle figure-img img-thumbnail" alt="avatar">
                <h6>Upload a different photo...</h6>
                <input id="userImage" type="file" class="text-center center-block file-upload" style="display: none">
            </div>
            <ul class="list-group">
                <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard"></i></li>
                <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> <a href="#">@Model.ProjectCount</a></li>
            </ul>
        </div>
        <div class="col-sm-9">
            <div class="tab-content">
                <div class="tab-pane active">
                    <form class="form" method="post" id="registrationForm">
                        <div class="form-group">
                            <div class="col-xs-6">
                                <input type="text" class="form-control" name="first_name" id="first_name" placeholder="first name" value="@Model.SignedUser.Username" title="enter your first name if any." disabled="@enabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <input type="text" class="form-control" name="last_name" id="last_name" placeholder="last name" title="enter your last name if any." disabled="@enabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <input type="text" class="form-control" name="phone" id="phone" placeholder="enter phone" title="enter your phone number if any." disabled="@enabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <input type="text" class="form-control" name="mobile" id="mobile" placeholder="enter mobile number" title="enter your mobile number if any." disabled="@enabled">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <input type="email" class="form-control" name="email" id="email" placeholder="you@email.com" title="enter your email." disabled="@enabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <input type="email" class="form-control" id="location" placeholder="somewhere" title="enter a location" disabled="@enabled">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <input type="password" class="form-control" name="password" id="password" placeholder="password" title="enter your password." disabled="@enabled">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <input type="password" class="form-control" name="password2" id="password2" placeholder="password2" title="enter your password2." disabled="@enabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-success" type="submit"><i class="fa fa-check"></i> Save</button>
                                <a class="btn" asp-area="" asp-page="/Dashboard" type="reset"><i class="fa fa-reply"></i> Reset</a>
                            </div>
                        </div>
                    </form>

                </div><!--/tab-pane-->
            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    </div><!--/col-9-->
</div><!--/row-->
